{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/{{user `ks_file`}}.cfg<enter>"
      ],
      "disk_size": 20480,
      "disk_type_id": "0",  
      "guest_os_type": "centos",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "iso_url": "{{ user `iso_url` }}",
      "output_directory": "output/{{ user `hostname` }}-{{ user `pe_version` }}-x86_64-vmware",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",      
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "{{user `vm_name`}}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{user `vm_memsize`}}",
        "numvcpus": "{{user `vm_cores`}}"
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{user `vm_name`}}-ptb{{user `ptb_version`}}-{{.Provider}}.box",
      "keep_input_artifact": true
    }
  ],
  "provisioners": [
    {
      "type": "shell", 
      "inline": ["sudo mkdir -p /vagrant/file_cache;sudo chown -R vagrant:vagrant /vagrant"]
    },
    {
      "type": "file",
      "source": "../file_cache/",
      "destination": "/vagrant/file_cache"
    },
    {
      "environment_vars": [
        "PE_STATUS={{user `pe_status`}}",
        "PE_VERSION={{user `pe_version`}}",
        "RUBY_LIB={{user `rubylib`}}",
        "TRAINING_REPO={{user `training_repo`}}",
        "TRAINING_BRANCH={{user `training_branch`}}",
        "VM_TYPE={{user `vm_type`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh",
        "scripts/sshd.sh",
	"scripts/{{user `vm_type`}}_build.sh",
        "scripts/vmtools.sh",
        "scripts/cleanup.sh",
	"scripts/{{user `vm_type`}}_cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "hostname": "vagrant",
    "iso_checksum": "08be09fd7276822bd3468af8f96198279ffc41f0",
    "iso_url": "http://ftp.osuosl.org/pub/centos/6/isos/x86_64/CentOS-6.6-x86_64-bin-DVD1.iso",
    "ks_file": "ks.cfg",
    "os_name": "CentOS-6.5",
    "pe_status": "release",
    "pe_version": "3.7.2",
    "rubylib": "/usr/src/puppet/lib:/usr/src/facter/lib:/usr/src/hiera/lib",
    "system_user": "vagrant",
    "system_user_password": "vagrant",
    "training_branch": "master",
    "training_repo": "https://github.com/puppetlabs/puppetlabs-training-bootstrap.git",
    "vm_name": "centos-6.5-x86_64-pe-3.7.2",
    "vm_type": "training",
    "vm_memsize": "4096",
    "vm_cores": "2",
    "ptb_version": "2.14"
  }
}
